<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners, adjust the radius as needed -->
    <corners android:radius="16dp" />

    <!-- Optional padding if you want space around the edges -->
    <padding android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

    <!-- Optional border around the EditText, set to a different color if needed -->
    <stroke android:width="2dp" android:color="#000000" /> <!-- Black border -->
</shape>