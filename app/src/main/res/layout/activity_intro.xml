<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/IntroLogo"
        android:layout_width="198dp"
        android:layout_height="268dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#FFFFFF"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/IntroLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/black"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IntroLogo"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="3dp" />

    <!-- Replacing Button with EditText for Username -->
    <EditText
        android:id="@+id/username"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/rounded_edittext"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Username"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

    <!-- Replacing Button with EditText for Password -->
    <EditText
        android:id="@+id/password"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Password"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <!-- Replacing Button with EditText for Height -->
    <EditText
        android:id="@+id/height"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Height"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <!-- Replacing Button with EditText for SOS Contact -->
    <EditText
        android:id="@+id/sosContact"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="SOS Contact"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height" />
</androidx.constraintlayout.widget.ConstraintLayout>